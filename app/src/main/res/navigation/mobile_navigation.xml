<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.example.epicture.DiscoverList.DiscoverListActivity"
        android:label="@string/title_discover"
        tools:layout="@layout/fragment_discover"/>

    <fragment
        android:id="@+id/navigation_upload"
        android:name="com.example.epicture.ui.upload.UploadFragment"
        android:label="@string/title_upload"
        tools:layout="@layout/fragment_upload" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.epicture.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.epicture.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.epicture.Account.AccountActivity"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />

</navigation>